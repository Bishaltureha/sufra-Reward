{
  "expo": {
    "name": "Sufra-Rewards",
    "slug": "Sufra-Rewards",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "statusBar":{
      "style":"dark",
      "backgroundColor":"#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "ExpoLocalization_supportsRTL": true,
        "CFBundleLocalizations": ["en", "ar"],
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby services and deliver to you faster.", 
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to provide better service, even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "We need your location to provide better service, even when the app is in the background."
  },
      "bundleIdentifier": "com.sufrarewards"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sufrarewards",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "supportsRTL": true
    },
    "plugins": [
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": ["en", "ar"],
            "android": ["en", "ar"]
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow app to use your location."
        }
      ]
    ]
  }
}
